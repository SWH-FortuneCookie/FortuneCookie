<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#212121"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/s_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/backbutton"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/mName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="의약품 이름"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="의약품 정보 공유하기"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/f1"
        android:text="사용자 이름"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"/>

    <EditText
        android:id="@+id/nameEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/timeinput"
        android:hint="받는 분의 이름을 입력하세요."
        android:inputType="text"
        android:textColorHint="#4f4f4f"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/f2"
        android:text="받는 분 전화번호"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"/>

    <EditText
        android:id="@+id/numEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/timeinput"
        android:inputType="number"
        android:hint="01000000000"
        android:textColorHint="#4f4f4f"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/g31"
            android:text="공유하기"
            android:textColor="#80ffffff"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>